<!-- views/index.ejs -->
<%- include('partials/header', {title: 'Beranda'}) %>
<%- include('partials/navbar') %>

<main class="flex-1">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Hero Section -->
        <div class="bg-gradient-to-br from-blue-50 to-indigo-100 rounded-2xl p-8 md:p-12 mb-12 shadow-lg">
            <div class="max-w-3xl mx-auto text-center">
                <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
                    Selamat Datang di 
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">
                        CEKUP
                    </span>
                </h1>
                <p class="text-xl text-gray-600 mb-8 leading-relaxed">
                    Temukan ribuan buku berkualitas untuk memperluas wawasan Anda. 
                    Akses mudah, praktis, dan tersedia 24/7.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="/books" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-xl font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                        <i class="fas fa-search mr-2"></i>
                        Jelajahi Katalog
                    </a>
                    <a href="/about" class="bg-white hover:bg-gray-50 text-blue-600 px-8 py-4 rounded-xl font-semibold transition-all duration-300 border-2 border-blue-600 hover:border-blue-700">
                        <i class="fas fa-info-circle mr-2"></i>
                        Pelajari Lebih Lanjut
                    </a>
                </div>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
            <div class="bg-white rounded-xl p-6 shadow-lg text-center transform hover:scale-105 transition-transform">
                <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-book text-2xl text-blue-600"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-2"><%= books.length %>+</h3>
                <p class="text-gray-600">Koleksi Buku</p>
            </div>
            <div class="bg-white rounded-xl p-6 shadow-lg text-center transform hover:scale-105 transition-transform">
                <div class="bg-green-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-clock text-2xl text-green-600"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-2">24/7</h3>
                <p class="text-gray-600">Akses Tersedia</p>
            </div>
            <div class="bg-white rounded-xl p-6 shadow-lg text-center transform hover:scale-105 transition-transform">
                <div class="bg-purple-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-users text-2xl text-purple-600"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-2">1000+</h3>
                <p class="text-gray-600">Pengguna Aktif</p>
            </div>
        </div>

        <!-- Featured Books -->
        <div class="mb-8">
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h2 class="text-3xl font-bold text-gray-800 mb-2">Buku Populer</h2>
                    <p class="text-gray-600">Temukan buku-buku terfavorit di perpustakaan kami</p>
                </div>
            </div>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                <% books.slice(0, 4).forEach(book => { %>
                <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
                    <div class="bg-gradient-to-br from-blue-500 to-purple-600 h-32 flex items-center justify-center">
                        <i class="fas fa-book-open text-4xl text-white"></i>
                    </div>
                    <div class="p-6">
                        <h3 class="font-bold text-lg text-gray-800 mb-3 line-clamp-2 min-h-[3.5rem]">
                            <%= book.title %>
                        </h3>
                        <div class="space-y-2 text-sm text-gray-600 mb-4">
                            <div class="flex items-center">
                                <i class="fas fa-user w-4 text-gray-400 mr-2"></i>
                                <span><%= book.author %></span>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-calendar w-4 text-gray-400 mr-2"></i>
                                <span><%= book.year %></span>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-tag w-4 text-gray-400 mr-2"></i>
                                <span><%= book.category %></span>
                            </div>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                <i class="fas fa-check mr-1"></i>
                                Tersedia
                            </span>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>

            <div class="text-center mt-10">
                <a href="/books" class="inline-flex items-center bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white px-8 py-4 rounded-xl font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                    Lihat Semua Buku
                    <i class="fas fa-arrow-right ml-2"></i>
                </a>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>